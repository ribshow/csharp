@model aspnet_mongo.Models.Product
<link href="~/css/style.css" rel="stylesheet" />

@{
    ViewData["Title"] = "TemTudo - Excluir produto";
}

<h1>Excluir</h1>

<h3>Você tem certeza que quer excluir?</h3>
<div>
    <h4>Produto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image_url)
        </dt>
        <dd class="col-sm-10">
            <img class="expand-img" src="~/assets/products/@Model.Image_url" width="120" height="120" alt="imagem produto"/>
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-warning">Retornar</a>
    </form>
</div>
